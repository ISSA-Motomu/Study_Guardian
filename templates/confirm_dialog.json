{
  "type": "bubble",
  "body": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "text",
        "text": "${text}",
        "weight": "bold",
        "size": "lg",
        "align": "center"
      }
    ]
  },
  "footer": {
    "type": "box",
    "layout": "horizontal",
    "spacing": "sm",
    "contents": [
      {
        "type": "button",
        "style": "primary",
        "action": {
          "type": "postback",
          "label": "はい",
          "data": "${action_data}"
        }
      },
      {
        "type": "button",
        "style": "secondary",
        "action": {
          "type": "message",
          "label": "いいえ",
          "text": "キャンセル"
        }
      }
    ]
  }
}