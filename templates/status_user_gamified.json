      },
      {
        "type": "separator",
        "margin": "lg"
      },
      {
        "type": "box",
        "layout": "horizontal",
        "contents": [
          {
            "type": "box",
            "layout": "vertical",
            "contents": [
              {
                "type": "text",
                "text": "RANK",
                "size": "xs",
                "color": "#aaaaaa"
              },
              {
                "type": "text",
                "text": "${rank}",
                "size": "xl",
                "weight": "bold",
                "color": "#333333"
              }
            ],
            "flex": 1,
            "alignItems": "center"
          },
          {
            "type": "separator"
          },
          {
            "type": "box",
            "layout": "vertical",
            "contents": [
              {
                "type": "text",
                "text": "WALLET",
                "size": "xs",
                "color": "#aaaaaa"
              },
              {
                "type": "text",
                "text": "${current_exp}",
                "size": "xl",
                "weight": "bold",
                "color": "#ff8800"
              },
              {
                "type": "text",
                "text": "POINTS",
                "size": "xxs",
                "color": "#ff8800"
              }
            ],
