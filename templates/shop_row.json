{
  "type": "box",
  "layout": "horizontal",
  "margin": "md",
  "alignItems": "center",
  "contents": [
    {
      "type": "text",
      "text": "${name}",
      "flex": 4,
      "wrap": true,
      "size": "sm",
      "color": "#333333",
      "gravity": "center"
    },
    {
      "type": "text",
      "text": "${cost} pt",
      "flex": 2,
      "size": "sm",
      "align": "end",
      "color": "#ff8800",
      "gravity": "center"
    },
    {
      "type": "button",
      "action": {
        "type": "postback",
        "label": "交換",
        "data": "action=buy&item=${key}"
      },
      "style": "primary",
      "height": "sm",
      "flex": 2,
      "margin": "sm"
    }
  ]
}